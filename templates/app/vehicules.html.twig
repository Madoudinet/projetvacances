{% extends 'base.html.twig' %}

{% block title %}Liste des vehicules{% endblock %}

{% block body %}

<h1 class="text-center">Liste des vehicules</h1>

{% for vehicule in vehicules %}
    

<div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
  <div class="card-header">{{ vehicule.titre }}</div>
  <div class="card-body">
    <h4 class="card-title">{{ vehicule.marque }} {{ vehicule.modele }}</h4>
    <p class="card-text">{{ vehicule.description }}</p>
  </div>
</div>
{% endfor %}

{% endblock %}
